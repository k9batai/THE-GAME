<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>MyCharacter</h2>
      <table class='table'>
        <tr>
      	  <th>name</th>
      	  <th><%= @end_user.name %></th>
        </tr>
      </table>
      <h2 class="mt-3">
        <%= link_to '投稿する', new_game_path, class: "btn btn-success" %></h2>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>MyGames</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ゲーム名</th>
            <th>カテゴリー</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @game.each do |game| %>
          <tr>
            <td><%= game.title %></td>
            <td><%= game.category %></td>
            <td><%= link_to '編集', edit_game_path(game.id) %></td>
            <td><%= link_to '削除', game_path(game.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
