<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-5 mx-auto">
    <h2>ユーザー編集</h2>
    <%= form_with model:@end_user, url: mypage_path do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :お名前 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email, class: "form-control email" %>
      </div>

      <div class="form-group">
        <%= f.submit "更新", class: 'btn btn-success' %>
        <%= link_to "退会する", withdraw_path, method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger ml-5" %>
      </div>

    <% end %>
    </div>
  </div>
</div>