<div class = "container">
<table class = "table table-hover">
  <thead>
    <tr>
      <th>投稿者</th>
      <th>ゲーム名</th>
      <th>カテゴリー</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><%= game.end_user.name %></td>
      <td><%= link_to game.title, game_path(game.id) %></td>
      <td><%= link_to game.category,search_game_path(keyword: game.category) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<% @games.each do |game| %>
<div class="card" style="width: 20rem;">
  <div class="card-header">
    投稿者/<%= game.end_user.name %>
  </div>
  <div class="card-body">
    ゲーム名/<%= link_to game.title, game_path(game.id) %>
  </div>
  <div class="card-footer">
    カテゴリー/
    <%= link_to game.category,search_game_path(keyword: game.category) %>
  </div>
</div>
<% end %>
