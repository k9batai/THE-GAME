<div class='container'>
  <table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>ゲーム名</th>
      <th>カテゴリー</th>
      <th>投稿者</th>
      <th>レビュー内容</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @game.title %></td>
      <td><%= @game.category %></td>
      <td><%= @game.end_user.name %></td>
      <td><%= @game.introduction %></td>
    </tr>
  </tbody>
</table>

<% @game_comments.each do |comment| %>
  <div class="media my-5">
    <%= comment.end_user.name %>
    <div class="media-body">
      <h5 class="mt-0">コメント</h5>
      <%= comment.comment %>
      <% if comment.end_user.id == current_end_user.id %>
      <%= link_to "削除", game_game_comment_path(@game, comment), method: :delete %>
      <% end %>
    </div>
  </div>
<% end %>
<div>
  <%= form_with model: [@game, @game_comment] do |f| %>
    <%= f.text_area :comment, placeholder: 'コメントを入力', class: 'form-control' %> <br>
    <%= f.submit "コメントする", class: 'btn btn-success' %>
  <% end %>
</div>
</div>