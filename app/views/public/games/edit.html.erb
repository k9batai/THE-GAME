<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-5 mx-auto">
    <h2>レビュー編集</h2>
    <%= form_with model:@game do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :ゲームタイトル %>
        <%= f.text_field :title, class: "form-control title" %>
      </div>
      <div class="form-group">
        <%= f.label :レビュー内容 %>
        <%= f.text_area :introduction, rows: 7, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :カテゴリー %>
        <%= f.text_field :category, class: "form-control category" %>
      </div>
      <div class="form-group"id="star">
        <%= f.label :star,'評価 ' %>
        <%= f.hidden_field :star, id: :review_star %>
        <!-- 評価javascript -->
        <script>
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',

          scoreName: 'game[star]',
          half: false,
        });
        </script>
      </div>
      <div class="form-group">
        <%= f.submit "更新する", class: 'btn btn-success' %>
        <%= link_to "戻る", mypage_path(current_end_user), class: 'btn btn-secondary ml-3' %>
      </div>
    <% end %>
  </div>
</div>