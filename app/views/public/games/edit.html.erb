<div class= "container">
  <div class= "row">
    <div class= "mx-auto">
      <h1>レビュー編集</h1>
      <%= form_with model: @game do |f| %>
        <div class= "form-group">
          <label for= "game_title">タイトル</label> <br>
          <%= f.text_field :title %>
        </div>
        <div class= "form-group">
          <label for= "game_introduction">レビュー内容</label> <br>
          <%= f.text_area :introduction %>
        </div>
        <div class= "form-group">
          <label for= "game_category">カテゴリー</label> <br>
          <%= f.text_area :category %>
        </div>
        <div class= "form-group">
          <%= f.submit "更新" %>
        </div>
      <% end %>
      <%= link_to "戻る", mypage_path(current_end_user) %>
    </div>
  </div>
</div>
