<div class = "container">
<h2 class = "text-center pt-5">投稿フォーム</h2>
<%= form_with model:@game,local:true do |f| %>
  <div class="form-group col-6 mx-auto ">
    <%= render 'layouts/error_messages', model: f.object %>
    <%= f.text_field :title, placeholder: 'タイトル', class: 'form-control game_title' %>
  </div>
  <div class="form-group col-6 mx-auto">
    <%= f.text_area :introduction, placeholder: 'レビュー内容', rows: 7, class: 'form-control game_introduction' %>
  </div>
  <div class="form-group col-3 offset-3">
    <%= f.text_field:category, placeholder: 'カテゴリー', class: 'form-control game_category' %>
  </div>
  <div class="form-group col-2 offset-3">
    <%= f.submit '投稿', class: 'btn btn-success' %>
  </div>
<% end %>
</div>