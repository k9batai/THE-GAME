<div class = "container">
<h2>新規投稿</h2>
<%= form_with model:@game,local:true do |f| %>
  <div class="form-group">
    <%= f.label :ゲーム名 %>
    <%= f.text_field :title, class: 'form-control game_title' %>
  </div>
  <div class="form-group">
    <%= f.label :レビュー %>
    <%= f.text_area :introduction, class: 'form-control game_introduction' %>
  </div>
  <div class="form-group">
    <%= f.label :カテゴリー %>
    <%= f.text_field:category, class: 'form-control game_category' %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿', class: 'btn btn-success' %>
  </div>
<% end %>
</div>