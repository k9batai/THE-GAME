<div class="container pt-5">
<div class="box2">
  <div class="box-inner">
    <%= form_with model: @end_user, url: end_user_session_path do |f| %>
    <h1>ログイン</h1>
    <div class="box-email">
      <i class="fa-solid fa-envelope"></i>
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', autocomplete: "email" %>
    </div>
    <div class="box-password">
      <div class="a-row">
        <div class="column-left">
          <i class="fa-solid fa-key"></i>
          <%= f.label :password, "パスワード" %>
        </div>
      </div>
      <%= f.password_field :password, placeholder: 'パスワード', autocomplete: "current-password" %>
    </div>
    <div class="box-login">
      <%= f.submit "ログイン" %>
    </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 登録がお済みでない方 <span>------------</span></p>
      <%= link_to "新規登録", new_end_user_registration_path %>
    </div>
  </div>
</div>
</div>