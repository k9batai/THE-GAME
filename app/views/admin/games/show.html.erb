<div class='container'>
  <table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>ゲーム名</th>
      <th>カテゴリー</th>
      <th>投稿者</th>
      <th>レビュー内容</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @game.title %></td>
      <td><%= @game.category %></td>
      <td><%= @game.end_user.name %></td>
      <td><%= @game.introduction %></td>
    </tr>
  </tbody>
</table>
<%= link_to "投稿を削除する", admin_game_path(@game), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>

<h4 class = "col-2 mt-3 border rounded-pill">コメント一覧</h4>
<% @game_comments.each do |comment| %>
  <p><%= comment.end_user.name %>さん</p>
  <p class = "border-bottom">コメント:<%= comment.comment %></p>
  <%= link_to "コメントを削除する", admin_game_game_comment_path(@game,comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
<% end %>
</div>

